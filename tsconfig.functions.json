{
  "extends": "./tsconfig.node.json",
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES2020",
    "lib": ["ES2020"],
    "types": ["node"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist-functions",
    "rootDir": "./netlify/functions"
  },
  "include": ["netlify/functions/**/*.ts"],
  "exclude": ["node_modules", "dist", "dist-functions"]
}
